#include<stdio.h>
int main()
{
	int a[4][4];
	int i,j;//二维数组需要利用循环输出
	int min,k;
	int t;
	
	printf("请输入一个4*4的数组：\n");
	for(i=0;i<4;i++)
		for(j=0;j<4;j++)
			scanf("%d",&a[i][j]);
	printf("最初的数组为：\n");//提示性的输出语句不能在内外层的循环里，循环只包含数字的循环
	for(i=0;i<4;i++)
	{
		for(j=0;j<4;j++)
			printf("%d",a[i][j]);//利用循环输出二维数组,并且[]内只能是[i][j];not [4][4]
			printf("\n");//输出同样采用内层循环大括号（1.输出数据 2.采用换行符4个换行输出）
	}
	min=a[0][0];
	for(i=0;i<4;i++)
		for(j=0;j<4;j++)//找出最小数字不用内层循环大括号，直接嵌套循环就可以，内层循环大括号的最终目的是为了控制每行的元素
			if(a[i][j]<=min)//保证第一个元素最小的情况下，可以互换
			{
				min=a[i][j];//内层循环大括号
				k=i;//记录行地址
			}
	for(j=0;j<4;j++)//列的单层循环，替换元素，类比于交换两个变量的值（线交换），一维的交换为面交换
	{
		t=a[k][j];
		a[k][j]=a[3][j];//末行与最小元素行调换，行不变，列改变所以仍为[j]
		a[3][j]=t;//注意：第四行的下标为a[3]，否则会报错
	}
	printf("最小元素行与末行交换后的结果为：\n");//提示性的输出语句不能在内外层的循环里，循环只包含数字的循环
	for(i=0;i<4;i++)
	{
		for(j=0;j<4;j++)
			printf("%d",a[i][j]);
			printf("\n");
	}
 return 0;
}
